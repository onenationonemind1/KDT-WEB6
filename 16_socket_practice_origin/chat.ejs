<script>
  var socket = io.connect("http://localhost:3000");

  socket.on("news", function (data) {
    $("#body").append(`<p>data from server : ${data}</p>`);
    console.log("data from server : " + data);
  });

  func1(0);
  function func1(i) {
    setTimeout(function () {
      if (i < 20) {
        socket.emit("msg", i);
        func1(i + 1);
      }
    }, 1000);
  }
</script>
